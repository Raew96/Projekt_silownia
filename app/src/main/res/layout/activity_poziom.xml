<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_cwiczenie_1"
                android:layout_width="342dp"
                android:layout_height="59dp"
                android:layout_marginTop="56dp"
                android:onClick="cwiczenie_start"
                android:text="Cwiczenie nr1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button_cwiczenie_2"
                android:layout_width="342dp"
                android:layout_height="59dp"
                android:layout_marginTop="20dp"
                android:onClick="cwiczenie_start"
                android:text="Cwiczenie nr2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_cwiczenie_1" />

            <Button
                android:id="@+id/button_cwiczenie_3"
                android:layout_width="342dp"
                android:layout_height="59dp"
                android:layout_marginTop="20dp"
                android:onClick="cwiczenie_start"
                android:text="Cwiczenie nr3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_cwiczenie_2" />

            <Button
                android:id="@+id/button_cwiczenie_4"
                android:layout_width="342dp"
                android:layout_height="59dp"
                android:layout_marginTop="20dp"
                android:onClick="cwiczenie_start"
                android:text="Cwiczenie nr4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_cwiczenie_3" />

            <Button
                android:id="@+id/button_rozpocznij"
                android:layout_width="172dp"
                android:layout_height="50dp"
                android:layout_marginBottom="64dp"
                android:text="Rozpocznij"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</RelativeLayout>